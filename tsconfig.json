{
  "exclude": ["build", "node_modules"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2019"],
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,

    "declaration": true,
    "skipLibCheck": true,
    
    "outDir": "build",
    "rootDir": "."
  }
}